{
	"version": "0.2.0",
	"configurations": [
        {
			"name": "Launch",
			"type": "node",
			"request": "launch",
			"program": "${workspaceRoot}/node_modules/lite-server/bin/lite-server",
			"stopOnEntry": false,
			"args": [],
			"cwd": "${workspaceRoot}",
			"preLaunchTask": null,
			"runtimeExecutable": null,
			"runtimeArgs": [
				"--nolazy"
			],
			"env": {
				"NODE_ENV": "development"
			},
			"console": "integratedTerminal",
			"sourceMaps": false,
			"outFiles": []
		},
		{
			"name": "Attach Chrome",
			"type": "chrome",
			"request": "attach",
			"port": 9222
		},
		{
			"name": "Attach",
			"type": "node",
			"request": "attach",
			"port": 3000,
			"address": "localhost",
			"restart": false,
			"sourceMaps": false,
			"outFiles": [],
			"localRoot": "${workspaceRoot}",
			"remoteRoot": null
		}
	]
}